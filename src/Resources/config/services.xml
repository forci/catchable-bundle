<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="forci.catchable.monolog.handler.log_buffer" class="Forci\Bundle\Catchable\Monolog\Handler\LogBufferHandler"/>

        <service id="forci.catchable.subscriber.exception" class="Forci\Bundle\Catchable\Subscriber\ExceptionSubscriber">
            <argument type="service" id="Forci\Bundle\Catchable\Collector\ThrowableCollector"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="forci.catchable.repo.abstract" abstract="true" public="true">
            <factory service="forci.catchable.entity_manager" method="getRepository"/>
        </service>

        <service id="forci.catchable.repo.catchable" class="Forci\Bundle\Catchable\Repository\CatchableRepository" parent="forci.catchable.repo.abstract">
            <argument>Forci\Bundle\Catchable\Entity\Catchable</argument>
        </service>

        <service id="Forci\Bundle\Catchable\Serializer\CatchableSerializer" public="true">
            <argument type="service" id="debug.file_link_formatter" on-invalid="ignore" />
            <argument>%kernel.charset%</argument>
            <argument>%kernel.project_dir%</argument>
        </service>

        <service id="Forci\Bundle\Catchable\Collector\ThrowableCollector">
            <argument type="service" id="forci.catchable.monolog.handler.log_buffer"/>
            <argument type="service" id="forci.catchable.repo.catchable"/>
        </service>

        <service id="Forci\Bundle\Catchable\Controller\IndexController" public="true">
            <tag name="controller.service_arguments"/>
        </service>
        <service id="Forci\Bundle\Catchable\Controller\CatchableController" public="true">
            <argument type="service" id="forci.catchable.repo.catchable"/>
            <argument type="service" id="Forci\Bundle\Catchable\Serializer\CatchableSerializer"/>
            <tag name="controller.service_arguments"/>
        </service>

    </services>

</container>